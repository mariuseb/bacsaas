"version": "0.2.0",
"configurations": [
    {
        "name": "Python C++ Debug",
        "type": "pythoncpp",
        "request": "launch",
        "pythonLaunchName": "Python: Current File",
        "cppConfig": "default (gdb) Attach"
    },
    {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
	"cwd": "${workspaceRoot}",
        "env": {
            "LD_LIBRARY_PATH": "/path/to/lib1:/path/to/lib2",
            "PYTHONPATH": "/usr/local:${workspaceFolder}/"
         }
    }
]
